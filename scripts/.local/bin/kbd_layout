#!/bin/bash
fix_layout() {
    ids=$(
        xinput --list | awk -v search="Gaming Keyboard" \
            '$0 ~ search {match($0, /id=[0-9]+/);\
                    if (RSTART) \
                      print substr($0, RSTART+3, RLENGTH-3)\
                   }'
    )
    # for i in $ids; do setxkbmap br -device "$i" >/dev/null 2>&1; done
    # xset r rate 200 120
}

fix_layout
